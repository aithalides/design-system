{
    "non-interactive": false,
    "dry-run": false,
    "verbose": false,
    "pkgFiles": [
        "package.json"
    ],
    "scripts": {
        "beforeStart": "npm test",
        "beforeStage": "./scripts/before-stage.sh",
        "changelog": "./scripts/github-changelog.sh ${version}",
        "beforeStage": "npm run zip",
        "afterRelease": "./scripts/after-release.sh ${npm.tag} ${version}"
    },
    "git": {
        "commitMessage": "Release v${version}",
        "tagAnnotation": "Release v${version}"
    },
    "npm": {
        "tag": "latest"
    },
    "github": {
        "release": true,
        "releaseName": "v%s",
        "tokenRef": "GITHUB_ACCESS_TOKEN",
        "assets": "IDS-*.zip"
    }
}
