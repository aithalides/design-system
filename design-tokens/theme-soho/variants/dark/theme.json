{
    "theme": {
        "shadow": {
            "boxshadow": {
                "base": { "value": "rgba(0, 0, 0, 0.4)" }
            }
        },
        "color": {
            "border": {
                "base": { "value": "{theme.color.palette.slate.40.value}" }
            },
            "font": {
                "base":  { "value": "{theme.color.palette.white.value}" },
                "info":  { "value": "{theme.color.palette.slate.30.value}" },
                "muted": { "value": "{theme.color.palette.slate.40.value}" }
            }
        }
    }
}
