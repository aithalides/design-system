{
  "name": "@infor/ids-assets",
  "version": "1.0.0-beta.3",
  "description": "Infor Design System Design Assets",
  "scripts": {
    "build": "npm run build:web",
    "build:web": "node ./scripts/node/build-web.js --files=./design-tokens/*.yml --format=custom-properties.css,sass,json,less,common.js,raw.json",
    "clean": "del ./platforms/*/*",
    "lint:web": "./node_modules/stylelint-cli/bin/stylelint ./platforms/web/*.custom-properties.css --formatter verbose; exit 0;",
    "lint:yaml": "yamllint ./**/*.yml",
    "prepublishOnly": "npm run clean && npm test && npm run build && npm run lint:web",
    "test": "npm run lint:yaml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/infor-design/design-system/blob/master/README.md"
  },
  "keywords": [
    "infor design system"
  ],
  "author": "Hook & Loop",
  "license": "Apache-2.0",
  "devDependencies": {
    "del-cli": "^1.1.0",
    "glob-fs": "^0.1.7",
    "minimalist": "^1.0.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "path": "^0.12.7",
    "rename": "^1.0.4",
    "stylelint": "^9.1.1",
    "stylelint-cli": "^1.0.0",
    "stylelint-order": "^0.8.1",
    "theo": "^6.0.0",
    "yaml-lint": "^1.0.0"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {}
}
